# syntax=docker/dockerfile:1.7
# Multi-stage build to keep the final image slim and speed up rebuilds

############################
# Builder image (installs deps with uv and caches wheels)
############################
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim AS builder
WORKDIR /app

# Copy dependency manifest first for better layer caching
COPY requirements.txt .

# Install Python dependencies; cache wheels between builds
RUN --mount=type=cache,target=/root/.cache/uv \
    UV_COMPILE_BYTECODE=1 \
    uv pip install --system --reinstall -r requirements.txt

############################
# Runtime image
############################
FROM python:3.12-slim-bookworm AS runtime
WORKDIR /app

# Minimal runtime system packages (many wheels rely on these libs)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgomp1 \
    libssl3 \
    libstdc++6 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Copy only the installed Python deps and scripts from builder
COPY --from=builder /usr/local/lib/python3.12 /usr/local/lib/python3.12
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code
COPY . .

# Create uploads directory
RUN mkdir -p /app/uploads

# Make start script executable
RUN chmod +x /app/start.sh

EXPOSE 5000

# Use unbuffered output for logs in containers
ENV PYTHONUNBUFFERED=1

CMD ["/bin/bash", "start.sh"]
